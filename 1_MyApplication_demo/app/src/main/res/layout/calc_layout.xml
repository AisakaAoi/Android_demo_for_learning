<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mod"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="%"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_CE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="CE"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_C"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="C"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_bg"
            android:gravity="center"
            android:text="back"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="1/x"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="x^2"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="x^(1/2)"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_bg"
            android:gravity="center"
            android:text="/"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="7"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="8"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="9"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_bg"
            android:gravity="center"
            android:text="*"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="4"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="5"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_bg"
            android:gravity="center"
            android:text="-"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="1"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="2"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="3"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_bg"
            android:gravity="center"
            android:text="+"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="+/-"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="0"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="."
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_bg"
            android:gravity="center"
            android:text="="
            android:textSize="30sp"/>

    </LinearLayout>

</LinearLayout>